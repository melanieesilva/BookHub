@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

@if (TempData["Mensagem"] != null)
{
<div class="alert alert-warning alert-dismissible fade show" role="alert" style="top:24px; right: 24px; position: absolute;z-index:1;">
  <strong>@TempData["Mensagem"]</strong>
